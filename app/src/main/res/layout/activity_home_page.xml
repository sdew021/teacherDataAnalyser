<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@mipmap/png4e"
    android:layout_height="match_parent"
    tools:context=".homePage">

    <TextView
        android:id="@+id/name22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed-medium"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="2sp"
        android:layout_marginStart="100sp"
        android:text="Home Page"
        android:layout_marginTop="50dp"
        android:textAllCaps="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#0E375F"
        android:textColorHighlight="#E7E4E4"
        android:textSize="35sp"
        android:textStyle="bold"

       />

    <EditText
        android:id="@+id/sub"
        android:textColorHint="#0E0101"
        android:layout_width="279dp"
        android:layout_height="37dp"
        android:layout_below="@+id/name22"
        android:layout_marginStart="70dp"
        android:layout_marginTop="79dp"
        android:layout_marginBottom="20dp"
        android:hint="enter subject"
     />

    <EditText
        android:id="@+id/branch"
        android:layout_width="279dp"
        android:layout_height="37dp"
        android:layout_below="@+id/sub"
        android:layout_marginStart="70dp"
        android:textColorHint="#0E0101"
        android:layout_marginTop="22dp"
        android:layout_marginBottom="20dp"
        android:hint="enter branch"
         />

    <EditText
        android:id="@+id/sem"
        android:layout_width="279dp"
        android:layout_height="37dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="70dp"
        android:layout_below="@+id/branch"
        android:textColorHint="#0E0101"
        android:layout_marginBottom="20dp"
        android:hint="enter sem"
        />

    <Button
        android:id="@+id/next"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="136dp"
        android:layout_height="64dp"
        android:layout_below="@+id/sem"

        android:layout_marginStart="120dp"

        android:text="next" />



</RelativeLayout>